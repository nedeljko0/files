{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "license": "MIT",
  "workspaces": {
    "nohoist": [
      "@types/koa",
      "@types/koa-bodyparser",
      "@types/koa__cors",
      "@types/koa__router",
      "@koa/cors",
      "@koa/multer",
      "@koa/router",
      "koa",
      "koa-bodyparser",
      "multer",
      "@types/multer",
      "@types/koa__multer",
      "**/@koa/multer",
      "**/multer",
      "**/fix-esm",
      "@types/jest",
      "@types/supertest",
      "jest",
      "supertest",
      "ts-jest",
      "@testcontainers/postgresql",
      "jest-mock-extended"
    ]
  },
  "scripts": {
    "start": "ts-node server.ts",
    "migrate": "npx prisma migrate deploy",
    "dev": "ts-node server.ts",
    "test": "yarn test:setup && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:docker": "docker compose -f docker-compose.test.yml up -d",
    "test:docker:down": "docker compose -f docker-compose.test.yml down",
    "test:setup": "yarn test:docker && npx prisma migrate deploy"
  },
  "dependencies": {
    "@files/shared": "*",
